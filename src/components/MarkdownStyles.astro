---
interface Props {
	element?: string;
	className?: string;
	[key: string]: any;
}

const { element: Element = "div", class: className, ...rest } = Astro.props;
---

<Element class:list={["markdown-body", { className }]} {...rest}>
	<slot />
</Element>

<style>
	.markdown-body {
		color: var(--foreground-secondary);
		font-size: 1.6rem;
		line-height: 2;
	}

	.markdown-body :global(code) {
		background: var(--background-secondary);
	}

	.markdown-body :global(h1),
	.markdown-body :global(h2),
	.markdown-body :global(h3),
	.markdown-body :global(h4),
	.markdown-body :global(h5),
	.markdown-body :global(h6) {
		color: var(--foreground-primary);
		font-family: var(--font-monospace);
		font-weight: 300;
	}

	.markdown-body :global(:first-child) {
		margin-top: 0;
	}

	.markdown-body :global(:last-child) {
		margin-bottom: 0;
	}

	.markdown-body :global(h1) {
		font-size: 3.6rem;
		margin-block-start: 72px;
	}

	.markdown-body :global(pre) {
		margin-block: 24px;
		padding: 24px;
		border: 1px solid var(--background-secondary);
		background-color: var(--background-primary) !important;
		border-radius: 4px;
		line-height: 1.5;
	}

	.markdown-body :global(pre code) {
		background-color: transparent;
	}

	.markdown-body :global(blockquote) {
		padding: 16px;
		color: var(--foreground-primary);
		background-color: var(--background-secondary);
		border-radius: 4px;
		margin: 0;
	}

	.markdown-body :global(ul) {
		list-style-type: square;
	}

	.markdown-body :global(a) {
		color: var(--foreground-accent-red);
		text-decoration: none;
		border-bottom: 1px solid currentColor;
		transition: 0.25s ease;
	}

	.markdown-body :global(a:hover) {
		opacity: 0.8;
	}

	.markdown-body :global(img),
	.markdown-body :global(video) {
		border-radius: 4px;
		max-width: 100%;
	}

	.markdown-body :global(.code-split) {
		display: flex;
		flex-wrap: wrap;
		flex-basis: content;
		margin-block: 24px;
		background: var(--background-secondary);
		border: 1px solid var(--background-secondary);
		gap: 1px;
		border-radius: 4px;
		overflow: hidden;
	}

	.markdown-body :global(.code-split pre) {
		border: 0;
		margin-block: 0;
		flex: 1 1 auto;
		border-radius: 0;
	}

	.markdown-body :global(table) {
		text-align: left;
		border-collapse: collapse;
		margin-block: 24px;
	}

	.markdown-body :global(table th),
	.markdown-body :global(table td) {
		padding: 6px 12px;
		border: 1px solid var(--background-secondary);
	}

	.markdown-body :global(table th) {
		font-weight: 600;
		color: var(--foreground-primary);
	}

	.markdown-body :global(table tr) {
		background-color: var(--background-primary);
		border-top: 1px solid var(--background-secondary);
	}
</style>
